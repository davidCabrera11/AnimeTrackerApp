<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_dest">

    <fragment
        android:id="@+id/main_dest"
        android:name="com.example.animetrackerapp.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_anime_detail"
            app:destination="@id/anime_detail_dest"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/anime_detail_dest"
        android:name="com.example.animetrackerapp.ui.detail.AnimeDetailFragment"
        android:label="fragment_anime_detail">
        <argument
            android:name="anime"
            app:argType="com.example.animetrackerapp.model.Anime" />
    </fragment>
</navigation>